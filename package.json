{
  "name": "@ciphera-net/ui",
  "version": "0.0.36",
  "description": "Shared UI components for Ciphera applications",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ciphera-net/ciphera-ui.git"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "icons:prebuild": "node scripts/enforce-icon-style.js",
    "icons:build": "npm run icons:prebuild && svgr --typescript --out-dir src/icons/generated src/icons/svg --icon --replace-attr-values \"#000=currentColor\"",
    "dev": "tsup --watch",
    "lint": "tsc"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.0",
    "clsx": "^2.1.0",
    "framer-motion": "^12.0.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@svgr/cli": "^8.1.0",
    "@types/node": "^25.0.10",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
